/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply bg-dark-800 text-teal-100;
  }
}

@layer components {
  /* for custom css on thirdparty components */
  .connect-button { /* copied & edited from c2ic module */
    font-size: 16px;
    background: rgb(20,20,20,0.8); 
    color: #e0f1ec;
    border: none;
    padding: 5px 10px;
    display: flex;
    align-items: center;
    border-radius: 40px;
    cursor: pointer;
    height: 35px;
  }
  .connect-button:hover {
    transform: none;
    background: none; 
  }

  .vote-button {
    @apply hover:bg-dark-700/60 w-8 h-8 rounded-full p-1 hover:scale-[1.3]; 
  }
  
	.fancy-border {
    @apply bg-gradient-to-br from-cyan-200 via-teal-500 to-emerald-600 font-semibold p-0.5 h-fit w-fit md:mx-0 rounded-full;
	}
  .text-gradient {
    @apply bg-gradient-to-br from-cyan-200 via-teal-400 to-emerald-600 bg-clip-text text-transparent;
  }
  .dark-gradient {
    @apply bg-gradient-to-br from-cyan-200/10  to-dark-700/30;
  }
  .nav-link {
    @apply flex hover:bg-dark-700 rounded-lg p-1 gap-x-1 lg:p-2 lg:gap-1;
  }
  .nav-link-svg {
    @apply rounded-full w-7 h-7 p-0.5 -my-0.5 ;
  }
}

@layer utilities {
  /* for adding custom css util that tailwind doesnt include */
}


